generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model superAdmin {
  id                 String    @id @default(uuid())
  fullname           String
  email              String    @unique
  password           String
  phone              String    @unique
  status             status    @default(active)
  otp                String?
  token              String?
  otpAttempts        Int?      @default(0)
  verified           Boolean   @default(false)
  otpExpiresAt       DateTime?
  passwordResetToken String?
  hashedResetLink    String?
  resetLinkExpiresAt DateTime?
  role               role      @default(superAdmin)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  schools            school[]  @relation("SuperAdminSchools")
}

model school {
  id           String      @id @default(uuid())
  name         String      @unique
  schoolType   String
  feeRequired  Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  superAdminId String
  admins       admin[]
  classes      classes[]
  events       event[]
  feedbacks    feedback[]
  libraries    library[]
  superAdmin   superAdmin  @relation("SuperAdminSchools", fields: [superAdminId], references: [id])
  students     student[]
  subjects     subject[]
  schedules    timetable[]
  transports   transport[]
}

model admin {
  id                         String         @id @default(uuid())
  fullname                   String
  email                      String         @unique
  password                   String
  phone                      String?
  role                       role @default(admin)  // e.g., admin, superAdmin
  schoolType                 String?
  status                     String         @default("active") // e.g., active, inactive
  otp                        String?
  token                      String?
  otpAttempts                Int?           @default(0)
  verified                   Boolean        @default(false)
  generatedRegistrationCodes String?       // Single string
  maxUsedCode                Int?           @default(5)
  totalCodeUsed              Int?           @default(0)
  createdAt                  DateTime       @default(now())
  updatedAt                  DateTime       @updatedAt
  schoolId                   String
  school                     school         @relation(fields: [schoolId], references: [id])
  attendance                 attendance[]
  notifications              notification[]
  students                   student[]

  tutor tutor[]
}

model tutor {
  id                String              @id @default(uuid())
  firstname         String
  surname           String
  othername         String?
