{
    "openapi": "3.1.0",
    "info": {
        "title": "SMS(School Management System API)",
        "version": "1.0.0",
        "description": "API documentation for SMS (School Management System). This API provides endpoints for managing users, schools, and other resources related to the school management system."
    },
    "servers": [
        {
            "url": "http://localhost:4500",
            "description": "Local server",
            "variables": {
                "port": {
                    "default": "4500",
                    "description": "Port number for the server"
                }
            }

        },
        {
            "url": "https://schoolbasedapi.onrender.com/api/web",
            "description": "Production server"

        }
    ],
    "paths": {
        "/api/web/admins/login": {
            "post": {
                "summary": "Admin login",
                "description": "Logs in a admin and returns a JWT token.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/web/admins/signup": {
            "post": {
                "summary": "Admin signup",
                "description": "Registers a new admin.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdminSignupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Admin created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminSignupResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": ["email", "password"]
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "AdminSignupRequest": {
                "type": "object",
                "properties": {
                    "fullname": { "type": "string" },
                    "email": { "type": "string", "format": "email" },
                    "password": { "type": "string" },
                    "phone": { "type": "string" },
                    "schoolCode": { "type": "string" },
                    "tutorRegistrationCode": { "type": "string" }
                },
                "required": [
                    "fullname",
                    "email",
                    "password",
                    "phone",
                    "schoolCode",
                    "tutorRegistrationCode"
                ]
            },
            "AdminSignupResponse": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "fullname": { "type": "string" },
                    "email": { "type": "string", "format": "email" },
                    "phone": { "type": "string" },
                    "role": { "type": "string" },
                    "status": { "type": "string" },
                    "schoolCode": { "type": "string" },
                    "tutorRegistrationCode": { "type": "string" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time" }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "scheme": "bearer"
        } ,
        "description": "JWT authorization header",
        "name": "Authorization",
        "in": "header",
        "required": true,
        "bearerFormat": {
            "type": "JWT",
            "description": "Bearer token",
            "example": "Bearer <token>"
        }

}}