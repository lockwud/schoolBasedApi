{
    "openapi": "3.1.0",
    "info": {
        "title": "SMS(School Management System API)",
        "version": "1.0.0",
        "description": "API documentation for SMS (School Management System). This API provides endpoints for managing users, schools, and other resources related to the school management system."
    },
    "servers": [
        {
            "url": "http://localhost:4500/api/web",
            "description": "Local server",
            "variables": {
                "port": {
                    "default": "4500",
                    "description": "Port number for the server"
                }
            }
        },
        {
            "url": "https://schoolbasedapi.onrender.com/api/web",
            "description": "Production server"
        }
    ],
    "paths": {
        "/admins/login": {
            "post": {
                "summary": "Admin login",
                "description": "Logs in a admin and returns a JWT token.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/admins/signup": {
            "post": {
                "summary": "Admin signup",
                "description": "Registers a new admin.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdminSignupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Admin created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminSignupResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/superAdmins/signUp": {
            "post": {
                "summary": "Create Super Admin",
                "description": "Registers a new super admin.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SuperAdminSignupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "SuperAdmin created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuperAdminResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/schools": {
            "post": {
                "summary": "Create School",
                "description": "Creates a new school record.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SchoolCreateRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "School created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SchoolResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/tutors": {
            "post": {
                "summary": "Create Tutor",
                "description": "Registers a new tutor.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/TutorSignupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Tutor created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TutorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "password"
                ]
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "AdminSignupRequest": {
                "type": "object",
                "properties": {
                    "fullname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "schoolCode": {
                        "type": "string"
                    },
                    "tutorRegistrationCode": {
                        "type": "string"
                    }
                },
                "required": [
                    "fullname",
                    "email",
                    "password",
                    "phone",
                    "schoolCode",
                    "tutorRegistrationCode"
                ]
            },
            "AdminSignupResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "fullname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "schoolCode": {
                        "type": "string"
                    },
                    "tutorRegistrationCode": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "SuperAdminSignupRequest": {
                "type": "object",
                "properties": {
                    "fullname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    }
                },
                "required": [
                    "fullname",
                    "email",
                    "password",
                    "phone"
                ]
            },
            "SuperAdminResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "fullname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "SchoolCreateRequest": {
                "type": "object",
                "properties": {
                    "schoolName": {
                        "type": "string"
                    },
                    "categrory": {
                        "type": "string",
                        "enum": [
                            "basic",
                            "secondary",
                            "tertiary"
                        ]
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "public",
                            "private"
                        ]
                    },
                    "feesRequired": {
                        "type": "boolean"
                    },
                    "superAdminId": {
                        "type": "string"
                    }
                },
                "required": [
                    "schoolName",
                    "categrory",
                    "type",
                    "superAdminId"
                ]
            },
            "SchoolResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "schoolName": {
                        "type": "string"
                    },
                    "categrory": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "feesRequired": {
                        "type": "boolean"
                    },
                    "superAdminId": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "TutorSignupRequest": {
                "type": "object",
                "properties": {
                    "firstname": {
                        "type": "string"
                    },
                    "surname": {
                        "type": "string"
                    },
                    "othername": {
                        "type": "string"
                    },
                    "gender": {
                        "type": "string",
                        "enum": [
                            "male",
                            "female",
                            "other"
                        ]
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "specialization": {
                        "type": "string"
                    },
                    "qualification": {
                        "type": "string"
                    },
                    "registrationCode": {
                        "type": "string"
                    },
                    "schoolId": {
                        "type": "string"
                    }
                },
                "required": [
                    "firstname",
                    "surname",
                    "gender",
                    "email",
                    "password",
                    "phone",
                    "specialization",
                    "qualification",
                    "registrationCode",
                    "schoolId"
                ]
            },
            "TutorResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "firstname": {
                        "type": "string"
                    },
                    "surname": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "verified": {
                        "type": "boolean"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "securitySchemes": {
        "bearerAuth": {
            "type": "http",
            "scheme": "bearer"
        },
        "description": "JWT authorization header",
        "name": "Authorization",
        "in": "header",
        "required": true,
        "bearerFormat": {
            "type": "JWT",
            "description": "Bearer token",
            "example": "Bearer <token>"
        }
    }
}